scraper-v {
  margin: 0 0 1rem 0;
  display: grid;
  grid-template-rows: var(--app-header-height) 1fr 1fr;

  & > header {
    padding: 0 0 0 3rem;
    font-size: 1.25rem;
    font-weight: 600;

    display: grid;
    grid-template-columns: 1fr 2fr 3em;
    background: var(--bkg-30);

    align-items: center;
    gap: 2rem;

    h1 {
      color: var(--txt-red);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.04em;
    }

  }


  & > master {
    padding: 1rem 2rem;
    display: grid;
  }


  & > detail {
    padding: 1rem 0rem;
    display: grid;
    grid-template-columns: 1fr 1fr ;
  }
}
