{
  "compilerOptions": {
    "module": "esnext",

    "target": "ESNext",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM",
    ],
    "noEmitOnError": true,
    "isolatedModules": true,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    // advanced
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "../dist/",
    "declaration": true
  },
  // "exclude": [
  //   "node_modules"
  // ],
  "include": [
    "./**/*"
  ]
}